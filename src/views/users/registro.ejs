<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
        <div class="main-registro">
            <div class="leftRegister">
                <section class="copyRegister">
                    <h2>Equipate con tecnología y calidad.</h2>
                </section>
            </div>
            <div class="rightRegister">
             <form class="registro" action="/user/registro" method="post" enctype="multipart/form-data">
                <section class="copyRegister">
                    <h5>Registro de Usuario</h5>  
                </section>                     
                <div> 
                    <input class="form-usu" type="text" name="nombre"  value="<%= locals.oldData ? oldData.nombre : null %>"  placeholder="  Nombre">                    
                    <% if(locals.errors && errors.nombre) { %>
                        <p class="error"> <%= errors.nombre.msg %> </p>
                        <% } %>
                    <p id="errorNombre"  class="error"></p>
                </div>
                <div>
                    <input class="form-usu" type="text" name="apellido" value="<%= locals.oldData ? oldData.apellido : null %>" placeholder="  Apellido" >
                    <% if(locals.errors && errors.apellido) { %>
                        <p class="error"> <%= errors.apellido.msg %> </p>
                        <% } %>
                    <p id="errorApellido"  class="error"></p> 
                </div>
                <div>
                    <input class="form-usu" type="number" name="cuit" value="<%= locals.oldData ? oldData.cuit : null %>" placeholder="  DNI o CUIT">
                    <% if(locals.cuit && errors.cuit) { %>
                        <p class="error"> <%= errors.cuit.msg %> </p>
                        <% } %>
                </div>
                <div>
                    <input class="form-usu" type="date" name="nacimiento" value="<%= locals.oldData ? oldData.nacimiento : null %>" placeholder=" Fecha de nacimiento ">
                    <% if(locals.nacimiento && errors.nacimiento) { %>
                        <p class="error"> <%= errors.nacimiento.msg %> </p>
                        <% } %>
                </div>
                <div>
                    <input class="form-usu" type="text" name="domicilio" value="<%= locals.oldData ? oldData.domicilio : null %>" placeholder="  Domicilio">
                    <% if(locals.domicilio && errors.domicilio) { %>
                        <p class="error"> <%= errors.domicilio.msg %> </p>
                    <% } %>
                </div>
                <div>
                    <input class="form-usu" type="text" name="email" value="<%= locals.oldData ? oldData.email : null %>" placeholder="  email@gmail.com" >
                    <% if(locals.errors && errors.email) { %>
                        <p class="error"> <%= errors.email.msg %> </p>
                        <% } %>
                    <p id="errorEmail"  class="error"></p> 
                </div>
                <div> 
                    <div class="labelRegistro" >
                       <label>Imagen de perfil</label>
                    </div>                   
                    <input class="fileRegistro" type="file" name="imagen" >
                    <% if(locals.errors && errors.image) { %>
                        <p class="error"> <%= errors.image.msg %> </p>
                    <% } %>
                    <p id="errorImagen"  class="error"></p>
                </div>
                <div>             
                <div class="input-container password">
                    <input class="form-usu" type="password" name="contrasenia"  value="" placeholder="  Contraseña" >
                    <% if(locals.errors && errors.contrasenia) { %>
                    <p class="error"> <%= errors.contrasenia.msg %> </p>
                    <% } %>
                    <p id="errores"  class="error"></p>
                </div> 
                <div>
                    <input class="form-usu" type="password" name="confirm-contrasenia"  value= "" placeholder="  Confirmar contraseña">
                    <% if(locals.errors && errors.contrasenia) { %>
                    <p class="error"> <%= errors.contrasenia.msg %> </p>
                    <% } %>
                    <p id="errores"  class="error"></p>
                </div>
                </div> 
                    <a href="#"> <button id="botonSubmit" class="botEnter" type="submit">Registrarse</button> </a>
                </div>              
            </form>
            </div>
        </div>
        <%- include('../partials/footer') %>
        <script src="/js/registro.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    </body>                       
</html>    
      